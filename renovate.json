{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "platform": "github",
  "baseBranch": "main",
  "packageRules": [
    {
      "packageNames": ["*"],
      "automerge": false,
      "schedule": ["on monday"]
    }
  ],
  "fileMatch": [
    "(^|/)(?:docker-)?compose[^/]*\\.y?ml.j2$"
  ],
  "depTypes": ["*"],
  "separateMajorMinor": true
}