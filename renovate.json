{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:recommended"],
    "fileMatch": ["**/*.yml", "**/*.j2"]
    "platform": "github",
    "baseBranch": "main",
    "packageRules": [
      {
        "packageNames": ["*"],
        "automerge": false,
        "schedule": ["on monday"]
      }
    ],
    "depTypes": ["*"],
    "separateMajorMinor": true,

    
