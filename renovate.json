{
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": true,
  "schedule": [
    "before 7pm every weekday",
    "after 7am every weekday",
    "every weekend"
  ],

  "docker-compose": {
    "fileMatch": ["(^|/)[a-z]*\.(?:docker-)?compose[^/]*\.y?ml$"]
  },
  "ignoreUnstable": true,
  "stabilityDays": 4
}
