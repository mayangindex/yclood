{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],

  "prHourlyLimit": 4,

  "regexManagers": [
    {
      "fileMatch": ["(^|/)tasks/[^/]+\\.ya?ml$"],
      "matchStrings": [
        "rke_version[A-Z_]*\\s*:\\s*(?<depName>[^:]+?):(?<currentValue>[a-z0-9.-]+)(?:@(?<currentDigest>sha256:[a-f0-9]+))?"
      ],
      "datasourceTemplate": "docker"
    }
  ],

  "gitlabci": {
    "fileMatch": ["(^|/)tasks/[^/]+\\.ya?ml$"],
    "pinDigests": true
  }
}
