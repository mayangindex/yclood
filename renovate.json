{
  "extends": ["config:base"],
  "platform": "github",
  "labels": ["docker", "docker-compose"],
  "autodiscover": true,
  "packageRules": [
    {
      "updateTypes": ["docker"],
      "updateScope": "docker-compose.yml.j2"
    }
  ],
  "docker": {
    "enabled": true,
    "fileRules": [
      "docker-compose.yml.j2"
    ]
  },
  "ignorePaths": ["**/*.md", "**/*.json", "**/*.yml"],
  "prHourlyLimit": 5
}
