{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],

  "prHourlyLimit": 4,

  "regexManagers": [
    {
        "fileMatch": ["(^|/)tasks/[^/]+\\.ya?ml$"],
        "datasourceTemplate": "docker"
    }
  ],

  "gitlabci": {
    "fileMatch": ["(^|/)tasks/[^/]+\\.ya?ml$"],
    "pinDigests": true
  }
}
