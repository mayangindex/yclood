{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":automergeAll"
  ],
  "baseBranches": [
    "main"
  ],
  "packageRules": [
    {
      "matchPackageNames": ["*"],
      "schedule": ["on monday"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    }
  ],
  "docker-compose": {
    "fileMatch": [
      "(^|/)[a-z]*.(?:docker-)?compose[^/]*.y?ml.j2$"
    ]
  },
  "separateMajorMinor": true,
  "automerge": true
}
