{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "platform": "github",
  "baseBranch": "main",
  "packageRules": [
    {
      "packageNames": ["*"],
      "automerge": false,
      "schedule": ["on monday"]
    }
  ],
  "docker-compose": {
    "fileMatch": ["(^|/)[a-z]*\.(?:docker-)?compose[^/]*\.y?ml.j2$"]
  },
  "depTypes": ["*"],
  "separateMajorMinor": true
}