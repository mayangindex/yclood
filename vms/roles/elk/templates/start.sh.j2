#!/bin/bash

PROJECT_NAME=elk
hostname $PROJECT_NAME
echo "127.0.0.1 $PROJECT_NAME" >>/etc/hosts
ip=$(curl http://checkip.amazonaws.com 2>/dev/null)
domain=$ip.nip.io
cd {{app_dir}}
echo "" >>/etc/motd
echo "your $PROJECT_NAME is deploying, please wait a while..." >>/etc/motd
docker-compose up -d
echo 'waiting for deploy'
